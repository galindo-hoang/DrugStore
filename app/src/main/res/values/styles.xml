<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/text_gray_color</item>
    </style>

    <style name="content_text">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="quantity_use_text">
        <item name="android:textSize">@dimen/quantity_text_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="title_text_size">16dp</dimen>
    <dimen name="content_text_size">16sp</dimen>
    <dimen name="quantity_text_size">24sp</dimen>
</resources>