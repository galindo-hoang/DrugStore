<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="28dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <ImageView
            android:id="@+id/imageViewDrug"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/drug_preview"
            android:scaleType="centerCrop"
            android:src="@drawable/drug"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDrugName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Compeed пластырь от влажных мозолей, 5 шт"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/imageViewDrug"
            app:layout_constraintStart_toStartOf="@+id/imageViewDrug"
            app:layout_constraintTop_toBottomOf="@id/imageViewDrug" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="120.000 VND"
            android:textColor="@color/price_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/imageViewDrug"
            app:layout_constraintStart_toStartOf="@+id/imageViewDrug"
            app:layout_constraintTop_toBottomOf="@id/textViewDrugName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
