<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.auth.MainActivity">

    <ImageView
        android:id="@+id/ivMain"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/splash_screen"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>


    <TextView
        android:id="@+id/tvSplashName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="@dimen/splash_screen_title_text_size"
        android:textColor="@color/primary_text_color"
        android:textStyle="bold"
        android:fontFamily="@font/carbon"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMain"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Телемедицина, заказ лекарств или гомеопатических средств - здесь есть все."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSplashName"
        android:layout_marginHorizontal="60dp"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/splash_screen_description_text_size"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>